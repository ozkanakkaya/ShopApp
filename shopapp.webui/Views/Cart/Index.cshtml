@model CartModel

<h1 class="h3">Shopping Cart</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <table class="table hover">
            <thead>
                <tr>
                    <th></th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (!String.IsNullOrEmpty(Model.CartId.ToString()))
                {
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <img src="~/images/@item.ImageUrl" width="80" alt="">
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity*item.Price)</td>
                            <td>
                                <button class="btn btn-danger btn-sm">
                                    <i class="fa fa-times fa-fw"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-danger">
                                Sepet Boş
                            </div>
                        </div>
                    </div>
                }

            </tbody>
        </table>
    </div>
    <div class="col-md-4"></div>
</div>
